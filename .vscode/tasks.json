{
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "if exist \"${workspaceFolder}\\main.exe\" del /f /q \"${workspaceFolder}\\main.exe\""
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build imgui app",
            "type": "shell",
            "dependsOn": "clean",
            "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Tools\\Llvm\\x64\\bin\\clang++.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\libraries\\general.cpp",
                "${workspaceFolder}\\libraries\\imgui_lib.cpp",
                "${workspaceFolder}\\libraries\\init.cpp",
                "${workspaceFolder}\\libraries\\tasks.cpp",
                "${workspaceFolder}\\libraries\\wndproc.cpp",
                "${workspaceFolder}\\libraries\\INIReader.cpp",
                "${workspaceFolder}\\main.cpp",
                "${workspaceFolder}\\imgui\\imgui.cpp",
                "${workspaceFolder}\\imgui\\imgui_draw.cpp",
                "${workspaceFolder}\\imgui\\imgui_tables.cpp",
                "${workspaceFolder}\\imgui\\imgui_widgets.cpp",
                "${workspaceFolder}\\imgui\\imgui_impl_win32.cpp",
                "${workspaceFolder}\\imgui\\imgui_impl_dx11.cpp",
                "-std=c++23",
                "-o",
                "${workspaceFolder}\\main.exe",
                "-I${workspaceFolder}",
                "-I${workspaceFolder}/imgui",
                "-I${workspaceFolder}/libraries",
                "-ld3d11",
                "-ld3dcompiler",
                "-ldxgi",
                "-luser32",
                "-lgdi32",
                "-lkernel32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}